	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	    <script src="{{request.static_url('hello:static/js/classie.js')}}"></script> 
	    <script src="{{request.static_url('hello:static/js/cbpAnimatedHeader.js')}}"></script> 

	    <!-- Include all compiled plugins (below), or include individual files as needed -->
	    <script src="{{request.static_url('hello:static/js/bootstrap.min.js')}}"></script> 
	    <script src="{{request.static_url('hello:static/js/icons_index.js')}}"></script> 
	    <script src="{{request.static_url('hello:static/js/navbarScroll.js')}}"></script> 
	   <!--  <script src="{{request.static_url('hello:static/js/common.js')}}"></script> -->

    </body>
</html>
